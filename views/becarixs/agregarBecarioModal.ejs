 <!-- Modal registro -->
<div name="modal" class="modal fade" id="registarBecarixModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
      <div class="myform form ">
         <div class="logo mb-3">
            <div class="col-md-12 text-center">
                <button type="button" class="btn-close float-right" data-bs-dismiss="modal" aria-label="Close"></button>
               <h1>Registrar Becarix</h1>
            </div>
         </div>
         <form action="/becarixs/registrar" method="post" name="login">
            <div class="form-group">
               <label for="displayName">Nombre</label>
               <input type="text" name="displayName"  class="form-control" id="displayName" aria-describedby="emailHelp" placeholder="Ingrese su nombre" required>
            </div>
            <div class="form-group">
               <label for="email">Correo </label>
               <input type="email" name="email"  class="form-control" id="email" aria-describedby="emailHelp" placeholder="Ingrese correo" required="true">
            </div>
            <div class="form-group">
               <label for="password">Contraseña</label>
               <input type="password" name="password" id="password"  class="form-control" aria-describedby="emailHelp" placeholder="Ingrese contraseña" required="true">
            </div>
        
            <div class="alert alert-danger" role="alert" id="modal-mail-error"></div>
            <div class="modal-footer">
                <button type="submit"  class="btn btn-primary" >Agregar becarix</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
            </div>
      
         </form>
      </div>
   </div>
</div>
   <script>
      const queryParams = new URLSearchParams(window.location.search)
      if(queryParams.get('error')) {
         // Mostrar modal
         const alert = document.querySelector('#modal-mail-error')
         //queryParams agarras los parametros que trae la url 
         alert.innerText = `El correo está duplicado<br>Correo: ${queryParams.get('mail')}<br/>Nombre: ${queryParams.get('name')}`;
      }
</script>
