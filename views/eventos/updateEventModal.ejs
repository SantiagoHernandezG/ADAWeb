 		<div class="modal fade" id="updateEventModal-<%= evento._id.toString() %>" tabindex="-1" aria-labelledby="exampleModalLabel"
			aria-hidden="true">
			<form class="form-horizontal" action="/eventos/update" method="POST" >
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">Editar evento</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body">
						<div class="form-floating mb-3">
							<input type="text" class="form-control" name="nameEvent" required="true" value="<%= evento.nameEvent %>">
							<label for="floatingPassword">Nombre del evento</label>
						</div>
						<div class="form-floating mb-3">
							<input type="text" class="form-control" name="nameSpeaker" value="<%= evento.nameSpeaker%>">
							<label for="floatingInput">Nombre del presentador</label>
						</div>
                        <div class="form-floating mb-3">
							<input type="text" class="form-control" name="placeEvent" required="true" value="<%= evento.placeEvent%>">
							<label for="floatingInput">Lugar del evento</label>
						</div>
						<div class="form-floating mb-3">
							<strong><h4">Fecha y horario del evento:</h4></strong>
						<input type="date" id="start" name="dateEvent"  min="2018-01-01"
							max="2024-12-31"  value="<%= evento.dateEvent.toISOString().split('T')[0]%>">
                        <input type="time" id="horario" name="timeEvent" required="true"  value="<%= evento.timeEvent%>">
                        </div>
  
						<div class="form-floating mb-3">
							<input type="text" class="form-control" name="contactEvent" required="true" value="<%= evento.contactEvent%> ">
							<label for="floatingInput">Correo del contacto del evento </label>
						</div>
						<div class="form-floating">
							<textarea class="form-control" name="descriptionEvent" placeholder="Leave a comment here" id="floatingTextarea2"
								style="height: 100px" required="true" ><%= evento.descriptionEvent%></textarea>
							<label for="floatingTextarea2">Descripci√≥n del evento</label>
						</div>
						<br>
						<div class="form-floating mb-3 text-center" >
							 <img src="/eventos/img/<%= evento.imageEvent ? evento.imageEvent: 'th-3339243262' %>" alt="<%= evento.nameEvent %>" style="width:70%">
						</div>
						<div class="visually-hidden">
							<input type="text" class="form-control" name="idEvent"  value="<%= evento._id.toString()%>">
						</div>
                          <!-- <br>
						<div class="mb-3">
							<strong><label for="formFile" class="form-label">Inserte nuevo promocional de evento si desea cambiarlo</label></strong>
                            <input type="file" name="imageEvent" >
						</div> -->
					</div>
					<div class="modal-footer">
						<input type="submit" value="Guardar cambios" class="btn btn-primary">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
					</div>
				</form>
